@model IEnumerable<blog_template_practice.Models.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="stylesheet" type="text/css" href="~/styles/MainStyleSheet.css" />
</head>
<body>
    <header>
        <div class="headerContent">
            <h1>Jason's Random Blog</h1>
            <h2>Choose Your Topic</h2>
        </div>
    </header>

    <nav>
        <a href="/Category/Index/">Home</a>
        <a href="/Content/Create/">Write a Post</a>
    </nav>

    <hr />

    @foreach (var category in Model)
    {
        <h2><a href="/Category/Details/@category.Id">@category.Name</a></h2>
    }


</body>
</html>
<hr />
