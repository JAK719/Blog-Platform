@model IEnumerable<blog_template_practice.Models.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jason's Random Blog</title>
    <link rel="stylesheet" type="text/css" href="~/styles/MainStyleSheet.css" />
</head>
<body>
    <header>
        <div class="headerContent">
            <h1>Jason's Random Blog</h1>
            <h2>Choose Your Topic</h2>
        </div>
    </header>

    <nav>
        <div class="navContent">
            
            <button onclick="window.location.href='/Content/Create/'" id="navBtn">Write A Post</button>
        </div>
    </nav>

    <main>
        <div class="topicsBox">
            @foreach (var category in Model)
            {
            <div class="tpcBtns">
                <button onclick="window.location.href='/Category/Details/@category.Id'" id="topicBtn">
                    <h2>@category.Name</h2>
                </button>
            </div>
                }
        </div>
    </main>


</body>
</html>

